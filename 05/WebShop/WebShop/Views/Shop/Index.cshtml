@model IEnumerable<WebShop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Our products</h2>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            In stock
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			@item.Name
        </td>
        <td>
			@String.Format("{0:F}", item.Price)
        </td>
        <td>
			@(item.InStock ? "Yes!" : "Sorry...")
        </td>
        <td>@using (Html.BeginForm("AddToCart", "Shop", FormMethod.Post))
            {
                <input type="hidden" name="id" value="@item.Id" />
                <input type="submit" value="Add to cart" />
            }
        </td>
    </tr>
}

</table>
